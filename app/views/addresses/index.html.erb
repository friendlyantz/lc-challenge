<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Feature</th>
      <th>Property</th>
      <th>Full address</th>
      <th>Lgasfile</th>
      <th>State</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.feature_id %></td>
        <td><%= address.property_id %></td>
        <td><%= address.full_address %></td>
        <td><%= address.lgasfile_id %></td>
        <td><%= address.state %></td>
        <td><%= address.postcode %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

